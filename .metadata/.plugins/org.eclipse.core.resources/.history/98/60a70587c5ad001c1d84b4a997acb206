grammar dk.sdu.mmmi.mdsd.Math with org.eclipse.xtext.common.Terminals

generate math "http://www.sdu.dk/mmmi/mdsd/Math"







MathExp:
	'var' name=ID '=' exp=SubtractionExp
;

//Reverse PMDAS
SubtractionExp returns Expression:
	AdditionExp ('-' right=AdditionExp)*
;

AdditionExp returns Expression:
	DivisionExp ('+' right=DivisionExp)*
;

DivisionExp returns Expression:
	MultiplicationExp ('/' right=MultiplicationExp)*
;

MultiplicationExp returns Expression:
	Primary ('*' right=Primary)*
;

Primary returns Expression:
	Number | Parenthesis | VariableUse | Let | LetUse
;

Parenthesis returns Expression:
	'(' SubtractionExp ')'
;

Number returns Expression:
	value=INT
;

VariableUse returns Expression:
	ref = [MathExp]
;

Let:
	'let' name=ID '=' assigment=Primary 'in' exp=SubtractionExp 'end'
;




