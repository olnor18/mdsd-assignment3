class MathGenerator extends AbstractGenerator {

	static Map<String, Integer> variables = new HashMap();
	
	override void doGenerate(Resource resource, IFileSystemAccess2 fsa, IGeneratorContext context) {
		val math = resource.allContents.filter(Math)
		if (math.hasNext){
			val mathObj = math.next
			mathObj.lines.forEach[line|
				line.compute
				variables.displayPanel
			]
		}
	}
	
	//
	// Compute function: computes value of expression
	// Note: written according to illegal left-recursive grammar, requires fix
	//
	
	def static compute(Math math) { 
		variables = new HashMap();
		math.lines.forEach[line|
				line.compute
		]
		variables
	}
	
	def static void compute(MathExp math) {
		variables.put(math.value.name, math.value.exp.computeExp)
	}
	
	def static int computeExp(Expression exp) {
		switch exp {
			Subtraction: exp.left.computeExp-exp.right.computeExp
			Addition: exp.left.computeExp+exp.right.computeExp
			Multiplication: exp.left.computeExp*exp.right.computeExp
			Division: exp.left.computeExp/exp.right.computeExp
			Number: exp.value
			Var: variables.get(exp.ref)
			Let: {
				variables.put(exp.name, exp.assigment.computeExp)
				exp.exp.computeExp
			}
			default: throw new Exception("Unhandled expression: " + exp)
		}
	}
	
	def static getName(Vars vars) {
		switch(vars){
			Let: (vars as Let).name
			Var: (vars as MathExp).name
		}
	}
	
